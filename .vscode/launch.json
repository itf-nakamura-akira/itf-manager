{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "API Gateway@Deno",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-net",
                "api-gateway/src/server.ts"
            ],
            "attachSimplePort": 9229
        }
    ]
}